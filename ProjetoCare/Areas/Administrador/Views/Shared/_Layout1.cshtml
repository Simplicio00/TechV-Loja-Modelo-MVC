<!DOCTYPE html>
<html lang="pt-br">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<title>@ViewData["title"] </title>

	<link href="https://localhost:5001/adm/css/styles.css" rel="stylesheet" />
	<link href="https://localhost:5001/css/alternative.css" rel="stylesheet" />

	<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>

</head>
<body class="sb-nav-fixed">
	@* bg-dark *@
	<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark ">
		<button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>
		<!-- Navbar Search-->
		<a class="navbar-brand" asp-action="index" asp-controller="home"> Painel do administrador </a>

		<form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
			<div style="display: none;" class="input-group">
				<input class="form-control" type="text" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2" />
				<div class="input-group-append">
					<button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button>
				</div>
			</div>
		</form>
		<!-- Navbar-->
		<ul class="navbar-nav ml-auto ml-md-0">
			<li class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
				<div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
					@* <a class="dropdown-item" href="#">Sair</a>
					<div class="dropdown-divider"></div> *@
				<a type="button" class="dropdown-item" asp-action="logout" asp-area="administrador" asp-controller="conf" >Sair</a>

				</div>
			</li>
		</ul>
	</nav>
	<div id="layoutSidenav" style="opacity: 0.9;">
		<div id="layoutSidenav_nav">
			<nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
				<div class="sb-sidenav-menu">
					<div class="nav">

						<div class="sb-sidenav-menu-heading">Navegar</div>



						<a class="nav-link" asp-controller="home" asp-action="index">
							<div class="sb-nav-link-icon"><i class="fas fa-money-bill-wave"></i></div>
							Central de transações
						</a>

						<a class="nav-link" asp-controller="produto" asp-action="index">
							<div class="sb-nav-link-icon"><i class="fas fa-box-open"></i></div>
							Central de produtos
						</a>
						<a class="nav-link" asp-action="index" asp-controller="Categoria">
							<div class="sb-nav-link-icon"><i class="fas fa-paperclip"></i></div>
							Central de categorias
						</a>

						<a class="nav-link" asp-action="index" asp-controller="chat">
							<div class="sb-nav-link-icon"> <i class="fas fa-comments"></i> </div>
							Central de conversas
						</a>


					</div>
				</div>
			</nav>
		</div>
		<div id="layoutSidenav_content">
			<main>

				@RenderBody()

			</main>
			<footer style="background-color: black !important;" class="py-4 bg-light mt-auto ftclass">
				<div class="container-fluid">
					<div class="d-flex align-items-center justify-content-between small">
						<div class="text-muted"> Todos os direitos reservados &copy; TECHV LOJA Modelo - Lucas S Oliveira @DateTime.Today.Year.ToString() </div>
						<div>
							<a href="#">Privacy Policy</a>
							&middot;
							<a href="#">Terms &amp; Conditions</a>
						</div>
					</div>
				</div>
			</footer>
		</div>
		<BlazoredModal/>
	</div>




	<script src="https://localhost:5001/js/site.js"></script>

	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	<script src="https://localhost:5001/adm/js/scripts.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
	<script src="https://localhost:5001/adm/assets/demo/chart-area-demo.js"></script>
	<script src="https://localhost:5001/adm/assets/demo/chart-bar-demo.js"></script>
	<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
	<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
	<script src="https://localhost:5001/adm/assets/demo/datatables-demo.js"></script>
</body>
</html>
