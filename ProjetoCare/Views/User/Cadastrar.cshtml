@model NewUserViewModel

@{
	ViewData["title"] = "Cadastrar";
}


<div class="container-fluid" style="display:flex; align-items:center; width:100%; height:600px; padding:1em; ">
	<div class="col-md-4 offset-md-4">

		<form method="post" asp-action="cadastrar" asp-controller="user" class="card text-center card  bg-default mb-3" style="background-color:white;border-top:solid 1px black;border-left:solid 1px black; border-right:solid 1px black;box-shadow:10px 10px black;margin-top:20px; margin-bottom:20px;">
			
			<div class="card-header" style="margin: 1em 0em 1em 0em;"><h3 style="color:black">Cadastro</h3></div>

			<div class="card-body">
				<label asp-for="@Model.Nome"></label>
				<input type="text" asp-for="@Model.Nome" id="userName" class="form-control input-sm chat-input" placeholder="Nome" />
				<span class="alert-danger" asp-validation-for="@Model.Nome" style="margin:10px;font-size:8px;"></span>
				</br>

				<label asp-for="@Model.Email"></label>
				<input type="email" asp-for="@Model.Email" id="userName" class="form-control input-sm chat-input" placeholder="Email" />
				<span class="alert-danger" asp-validation-for="@Model.Email" style="margin:10px;font-size:8px;"></span>
				</br>

				<label asp-for="@Model.Senha"></label>
				<input type="password" asp-for="@Model.Senha" id="userPassword" class="form-control input-sm chat-input" placeholder="Senha" />
				<span class="alert-danger" asp-validation-for="@Model.Senha" style="margin:10px;font-size:8px;"></span>
				</br>

				<label asp-for="@Model.ConfirmarSenha"></label>
				<input type="password" asp-for="@Model.ConfirmarSenha" id="userPassword" class="form-control input-sm chat-input" placeholder="Senha" />
				<span class="alert-danger" asp-validation-for="@Model.ConfirmarSenha" style="margin:10px;font-size:8px;"></span>
				</br>

				<label asp-for="@Model.CEP"></label>
				<input type="number" asp-for="@Model.CEP" class="form-control input-sm chat-input" placeholder="Digite o seu CEP" />
				<span class="alert-danger" asp-validation-for="@Model.CEP" style="margin:10px;font-size:8px;"></span>
				</br>

			</div>

			<br />

			@if (TempData["MSGE"] != null)
			{
				<span class="alert-danger" style="margin:10px;">@TempData["MSGE"].ToString()</span>
			}

			<div class="card-footer text-muted" style="margin-top:1em;background-color:darkblue;">
				<button type="submit" class="btn btn-default" style="color:white;">Entrar</button>
			</div>
		</form>
	</div>

</div>